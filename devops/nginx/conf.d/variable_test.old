server {
	listen 80;
	root /home/ubuntu/public_html;
	set $custom_variable 0;

	location / {
		return 200 "custom variable is $custom_variable\n";
	}

	location /test1 {
		set $custom_variable 42;
		return 200 "custom variable is $custom_variable\n";
	}

	location /test2 {
		set $custom_variable "null";
		return 200 "custom variable is $custom_variable\n";
	}
}
